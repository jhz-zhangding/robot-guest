<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.efrobot.guests">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 存储权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 震动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- 您从百度网站获取的权限	-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />


    <application
        android:name="com.efrobot.guests.GuestsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 您从百度网站获取的 APP	KEY	-->
        <meta-data
            android:name="BaiduMobAd_STAT_ID"
            android:value="288e3c4484" />
        <!-- 渠道商编号 -->
        <meta-data
            android:name="BaiduMobAd_CHANNEL"
            android:value="jhz_mall" />
        <!-- 是否开启错误日志统计，默认为 false	-->
        <meta-data
            android:name="BaiduMobAd_EXCEPTION_LOG"
            android:value="true" />
        <!-- 日志发送策略，可选值：APP_START、ONCE_A_DAY、SET_TIME_INTERVAL，默认为 APP_START	-->
        <meta-data
            android:name="BaiduMobAd_SEND_STRATEGY"
            android:value="APP_START" />
        <!-- 日志发送策略 为 SET_TIME_INTERVAL 时，需设定时间间隔(取消下行注释)。取值为 1-24 的整数，默认为 1	-->
        <meta-data
            android:name="BaiduMobAd_TIME_INTERVAL"
            android:value="2" />
        <!-- 日志仅在 wifi 网络下发送，默认为 false	-->
        <meta-data
            android:name="BaiduMobAd_ONLY_WIFI"
            android:value="false"	/>


        <!-- 是否获取基站位置信息 ,默认为 true	-->
        <meta-data
            android:name="BaiduMobAd_CELL_LOCATION"
            android:value="true" />
        <!-- 是否获取 GPS 位置信息，默认为 true	-->
        <meta-data
            android:name="BaiduMobAd_GPS_LOCATION"
            android:value="true" />
        <!-- 是否获取 WIFI 位置信息，默认为 true	-->
        <meta-data
            android:name="BaiduMobAd_WIFI_LOCATION"
            android:value="true" />


        <activity
            android:name="com.efrobot.guests.main.MainActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.efrobot.guests.setting.SettingActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.efrobot.guests.speech.CusProvider"
            android:authorities="com.efrobot.guests.speechSdkProvider"
            android:exported="true" />

        <receiver android:name="com.efrobot.guests.speech.SpeechReceiver">
            <intent-filter>
                <action android:name="com.efrobot.speechlibrary.ACTION_SPEECH_DISCERN_STATE" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.efrobot.guests.service.UltrasonicService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="com.efrobot.guests.action.AddBodyShowView" />
        <activity android:name="com.efrobot.guests.explain.ExplainActivity" />

        <service android:name="com.efrobot.guests.speech.AlarmUlService" />

        <receiver android:name="com.efrobot.guests.speech.AlarmUlService$AlarmEndReceiver" />
        <receiver android:name="com.efrobot.guests.speech.AlarmUlService$AlarmStartReceiver" />

        <activity
            android:name="com.efrobot.guests.setting.advanced.AdvancedSettingActivity"
            android:windowSoftInputMode="stateHidden" />

        <receiver android:name="com.efrobot.guests.broadcast.ReceiveMaskBroadcast">
            <intent-filter android:priority="3">
                <action android:name="android.intent.action.MASK_CHANGED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>