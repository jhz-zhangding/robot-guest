<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.efrobot.guests">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 存储权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 震动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".GuestsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.MainActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".setting.SettingActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".speech.CusProvider"
            android:authorities="com.efrobot.guests.speechSdkProvider"
            android:exported="true" />

        <receiver android:name=".speech.SpeechReceiver">
            <intent-filter>
                <action android:name="com.efrobot.speechlibrary.ACTION_SPEECH_DISCERN_STATE" />
            </intent-filter>
        </receiver>

        <service
            android:name=".service.UltrasonicService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".action.AddBodyShowView" />
        <activity android:name=".explain.ExplainActivity" />

        <service android:name=".speech.AlarmUlService" />

        <receiver android:name=".speech.AlarmUlService$AlarmEndReceiver" />
        <receiver android:name=".speech.AlarmUlService$AlarmStartReceiver" />

        <activity
            android:name=".setting.advanced.AdvancedSettingActivity"
            android:windowSoftInputMode="stateHidden" />

        <service
            android:name=".service.GuestRobotService"
            android:enabled="true"
            android:exported="true"></service>

        <receiver android:name=".broadcast.ReceiveBootBroadcast">
            <intent-filter android:priority="3">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>