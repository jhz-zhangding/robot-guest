    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_60"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ultrasonic_init_btn"
            android:layout_width="@dimen/padding_120"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:padding="@dimen/padding"
            android:text="初始化"
            android:textColor="@color/guest_text_color"
            android:textSize="@dimen/textsize_26" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/setting_is_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动校正超声波"
                android:textColor="@color/guest_text_color"
                android:textSize="@dimen/textsize_26" />
        </LinearLayout>

    </LinearLayout>

