                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:text="左2"
                android:textColor="@color/guest_text_color"
