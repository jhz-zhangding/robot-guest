package com.efrobot.guests.utils;

/**
 * Created by Administrator on 2017/1/10.
 */
public class StateUtils {
    private static StateUtils instance;
    private static int num = 0;
    /**
     * 语音开启状态
     */
    public boolean mAwakeState = true;

    public boolean mTtsEnd = false;

    private boolean mUrlValue = false;

    //设置时间离开
    private boolean isFirstSay;

    private boolean voiceEnd = false;

    public boolean isVoiceEnd() {
        return voiceEnd;
    }

    public void setVoiceEnd(boolean voiceEnd) {
        this.voiceEnd = voiceEnd;
    }


    public boolean getFarAway() {
        return isFirstSay;
    }

    public void setFarAway(boolean isSay) {
        this.isFirstSay = isSay;
    }

    public boolean isHadGuest() {
        return isHadGuest;
    }

    public void setHadGuest(boolean hadGuest) {
        isHadGuest = hadGuest;
    }

    private boolean isHadGuest = false;

    public boolean ismUrlValue() {
        return mUrlValue;
    }

    public void setmUrlValue(boolean mUrlValue) {
        this.mUrlValue = mUrlValue;
    }

    public boolean ismTtsEnd() {
        return mTtsEnd;
    }

    public void setmTtsEnd(boolean mTtsEnd) {
        this.mTtsEnd = mTtsEnd;
    }

    /**
     * 单例，返回一个实例
     *
     * @return
     */
    public static StateUtils getInstance() {
        if (instance == null) {
            instance = new StateUtils();
        }
        return instance;
    }

    public boolean ismAwakeState() {
        return mAwakeState;
    }

    public void setmAwakeState(boolean mAwakeState) {
        this.mAwakeState = mAwakeState;
    }

}
