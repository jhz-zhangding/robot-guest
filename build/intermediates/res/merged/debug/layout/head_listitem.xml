<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="600dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/head_text_listitem"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="#000000"
        android:layout_width="40dp"
        android:layout_height="match_parent" />

    <Spinner
        android:layout_marginLeft="@dimen/padding"
        android:entries="@array/head_direction"
        android:id="@+id/head_direction_spin"
        android:layout_width="@dimen/padding_160"
        android:layout_height="wrap_content"/>
    <Spinner
        android:layout_marginLeft="@dimen/padding"
        android:entries="@array/head_angle"
        android:id="@+id/head_angle_spin"
        android:layout_width="@dimen/padding_160"
        android:layout_height="wrap_content"/>
    <Spinner
        android:entries="@array/head_time"
        android:id="@+id/head_time_spin"
        android:layout_marginLeft="@dimen/padding"
        android:layout_width="@dimen/padding_160"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/head_del"
        android:background="@mipmap/del"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</LinearLayout>
