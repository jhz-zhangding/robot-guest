<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".main.MainActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/color_414141">

        <TextView
            android:id="@+id/test_back"
            android:layout_width="@dimen/padding_120"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_40"
            android:layout_marginRight="@dimen/padding_40"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:padding="@dimen/padding"
            android:text="返回"
            android:textColor="@color/hint_diakog_cancle_textcoklor"
            android:textSize="@dimen/textsize_26" />

        <TextView
            android:id="@+id/again_demarcate"
            android:layout_width="@dimen/padding_120"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_40"
            android:layout_marginRight="@dimen/padding_40"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:padding="@dimen/padding"
            android:text="初始化"
            android:textColor="@color/hint_diakog_cancle_textcoklor"
            android:textSize="@dimen/textsize_26" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请稍后....."
            android:textSize="@dimen/text_size_40" />

        <LinearLayout
            android:id="@+id/left_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_time"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/usher_distance1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="上左："
                android:textSize="@dimen/text_size_40" />

            <TextView
                android:id="@+id/usher_distance10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="下左："
                android:textSize="@dimen/text_size_40" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/middle_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_time"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/left_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usher_distance0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="上中："
                android:textSize="@dimen/text_size_40" />

            <TextView
                android:id="@+id/usher_distance9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="下中："
                android:textSize="@dimen/text_size_40" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_time"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/middle_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usher_distance7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="上右："
                android:textSize="@dimen/text_size_40" />

            <TextView
                android:id="@+id/usher_distance8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="下右："
                android:textSize="@dimen/text_size_40" />


        </LinearLayout>

        <TextView
            android:id="@+id/infrared_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_layout"
            android:layout_marginTop="20dp"
            android:text="红外请稍后....."
            android:visibility="invisible"
            android:textSize="@dimen/text_size_40" />

    </RelativeLayout>
</RelativeLayout>
