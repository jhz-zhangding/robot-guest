<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/wing_text_listitem"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/wing_direction_spin"
        android:layout_width="@dimen/padding_160"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding"
        android:entries="@array/wing_direction" />

    <Spinner
        android:id="@+id/wing_angle_spin"
        android:layout_width="@dimen/padding_160"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding"
        android:entries="@array/wing_angle" />

    <Spinner
        android:id="@+id/wing_time_spin"
        android:layout_width="@dimen/padding_160"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding"
        android:entries="@array/wing_time" />

    <ImageView
        android:id="@+id/wing_del"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        android:background="@mipmap/del"
        android:visibility="gone" />

</LinearLayout>
