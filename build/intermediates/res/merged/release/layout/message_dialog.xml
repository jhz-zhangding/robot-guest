<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_35"
    android:paddingLeft="@dimen/padding_35"
    android:paddingRight="@dimen/padding_35"
    android:paddingTop="@dimen/padding_35">

    <TextView
        android:id="@+id/title"
        style="@style/text_face_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding"
        android:textSize="@dimen/textsize_30" />

    <TextView
        android:id="@+id/tv_message"
        style="@style/text_face_author"
        android:textColor="@color/color_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_weight="3"
        android:gravity="center"
        android:scrollbars = "vertical"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            style="@style/text_nomal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_25"
            android:layout_weight="2"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_15dp"
            android:paddingTop="@dimen/padding_15dp"
            android:textColor="@color/hint_diakog_cancle_textcoklor" />

        <TextView
            android:id="@+id/tv_ok"
            style="@style/text_nomal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_15dp"
            android:paddingTop="@dimen/padding_15dp"
            android:textColor="@color/hint_diakog_cancle_textcoklor" />
    </LinearLayout>
</LinearLayout>