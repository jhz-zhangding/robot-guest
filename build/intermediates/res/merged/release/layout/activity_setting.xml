<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/color_414141">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="@dimen/padding_120"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_40"
                android:layout_marginRight="@dimen/padding_40"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:text="退出"
                android:textColor="@color/hint_diakog_cancle_textcoklor"
                android:textSize="@dimen/textsize_26" />
            <TextView
                android:id="@+id/explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/cancel"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:text="使用说明"
                android:textColor="@color/hint_diakog_cancle_textcoklor"
                android:textSize="@dimen/textsize_26" />

            <ImageView
                android:id="@+id/ultrasonic_open_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_0"
                android:layout_toLeftOf="@+id/ultrasonic_test_btn"
                android:padding="@dimen/padding_20"
                android:src="@drawable/play_bg" />

            <TextView
                android:id="@+id/ultrasonic_test_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_toLeftOf="@+id/affirm"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:minWidth="@dimen/padding_120"
                android:padding="@dimen/padding"
                android:text="测试超声波"
                android:textColor="@color/hint_diakog_cancle_textcoklor"
                android:textSize="@dimen/textsize_26" />

            <TextView
                android:id="@+id/affirm"
                android:layout_width="@dimen/padding_120"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_40"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:text="保存"
                android:textColor="@color/hint_diakog_cancle_textcoklor"
                android:textSize="@dimen/textsize_26" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_10dp"
            tools:context=".main.MainActivity">

            <include
                android:id="@+id/ul_place_test_layout"
                layout="@layout/layout_ultrasonic_test_dis" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="276dp"
                android:text="注：启动前请查看超声波数据是否正常，如不正常，请点击右侧“初始化”按钮"
                android:textSize="22sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_page_view_height"
                android:background="#888888"
                android:visibility="gone"
                />

            <include
                android:id="@+id/ul_timer_task_layout"
                layout="@layout/layout_timer_task"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_page_view_height"
                android:background="#888888" />

            <include
                android:id="@+id/ul_place_layout"
                layout="@layout/layout_dir_dis" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_page_view_height"
                android:background="#888888" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/welcome_statement"
                    android:minWidth="180dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="迎宾语设置"
                    android:textSize="@dimen/title_size_30" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_60"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/tts_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tts_text"
                            android:textSize="@dimen/textsize_26" />

                        <EditText
                            android:id="@+id/tts_value_edit"
                            android:layout_width="800dp"
                            android:text="@string/welcome_tts"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/distance_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_10dp"
                        android:layout_marginRight="@dimen/padding_40"
                        android:layout_marginTop="@dimen/setting_page_view_height"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/wel_face"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="250dp"
                            android:text="表情："
                            android:textSize="@dimen/textsize_26" />

                        <TextView
                            android:id="@+id/wel_action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="250dp"
                            android:text="动作："
                            android:textSize="@dimen/textsize_26" />


                        <TextView
                            android:id="@+id/wel_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:minWidth="200dp"
                            android:text="灯带："
                            android:textSize="@dimen/textsize_26" />

                        <Button
                            android:id="@+id/action_setting_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/button_ba_bg"
                            android:padding="8dp"
                            android:text="@string/action_text"
                            android:textSize="@dimen/text_size_20" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_page_view_height"
                android:background="#888888"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="180dp"
                    android:layout_marginLeft="40dp"
                    android:text="等待语设置"
                    android:textSize="@dimen/title_size_30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_60"
                    android:text="招揽语："
                    android:textSize="@dimen/textsize_26" />
                <EditText
                    android:id="@+id/canvass_tts_value_edit"
                    android:layout_width="300dp"
                    android:text=""
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_60"
                    android:text="等候时间(s)："
                    android:textSize="@dimen/textsize_26" />
                <EditText
                    android:id="@+id/canvass_time"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text=""
                    android:textSize="@dimen/text_size_30" />
                <CheckBox
                    android:id="@+id/wave_head_ck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否摆头"
                    android:textSize="@dimen/textsize_26"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_page_view_height"
                android:background="#888888"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="180dp"
                    android:text="交流状态设置"
                    android:textSize="@dimen/title_size_30" />

                <RadioGroup
                    android:id="@+id/mode_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_60">

                    <RadioButton
                        android:id="@+id/voice_communication_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="语音交流模式"
                        android:textSize="@dimen/textsize_26" />

                    <RadioButton
                        android:id="@+id/user_custom_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:text="自定义模式"
                        android:textSize="@dimen/textsize_26"
                        android:visibility="gone"
                        />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="语音交流时间(s)："
                            android:textSize="25sp" />

                        <EditText
                            android:id="@+id/voice_time"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="10"
                            android:textSize="@dimen/text_size_30" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/custom_setting_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="自定义设置"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_page_view_height"
                android:background="#888888" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="180dp"
                    android:layout_marginLeft="40dp"
                    android:text="结束语设置"
                    android:textSize="@dimen/title_size_30" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/tts_end_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tts_layout"
                        android:layout_marginLeft="@dimen/padding_60"
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="结束语："
                            android:textSize="@dimen/textsize_26" />

                        <EditText
                            android:id="@+id/tts_end_value_edit"
                            android:layout_width="800dp"
                            android:layout_height="wrap_content"
                            android:text="再见"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ul_place_layout"
                        android:layout_marginLeft="@dimen/padding_60"
                        android:layout_marginRight="@dimen/padding_40"
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/end_wel_face"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="250dp"
                            android:text="表情："
                            android:textSize="@dimen/textsize_26" />

                        <TextView
                            android:id="@+id/end_wel_action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="250dp"
                            android:text="动作："
                            android:textSize="@dimen/textsize_26" />

                        <TextView
                            android:id="@+id/end_wel_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:minWidth="200dp"
                            android:text="灯带："
                            android:textSize="@dimen/textsize_26" />

                        <Button
                            android:id="@+id/end_action_setting_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/button_ba_bg"
                            android:padding="8dp"
                            android:text="@string/action_text"
                            android:textSize="@dimen/text_size_20" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <!-- *************检测次数设置************ -->
            <LinearLayout
                android:id="@+id/num_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tts_end_layout"
                android:layout_marginTop="@dimen/margin_60"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进入检测次数:"
                    android:textSize="@dimen/text_size_40" />

                <EditText
                    android:id="@+id/num_value_edit"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="离开检测次数:"
                    android:textSize="@dimen/text_size_40" />

                <EditText
                    android:id="@+id/num_far_value_edit"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:inputType="number" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
